<div ng-controller="app.views.exams.index as vm">
    <h3>@L("Exams")</h3>
    <div class="text-danger">
        <strong>
            Note:
        </strong>
        <span>
            Click one of the below listed exams to view/edit its details or send invitations
        </span>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a ui-sref="create" class="btn btn-primary pull-right">
                <i class="fa fa-plus"></i> @L("CreateNewExam")
            </a>
            <div class="col-md-12">
                <strong>Filter Results:</strong>
                <span>
                    <input type="text" placeholder="Enter text to filter records..." ng-model="vm.search" class="form-control form-inline" />
                </span>
                <hr />

            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>@L("ExamId")</th>
                        <th>@L("ExamName")</th>
                        <th>@L("InvitationURL")</th>
                        <th>@L("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="exam-table" ng-repeat="exam in vm.exams | filter: vm.search" ng-click="vm.viewExamDetails(exam)">
                        <td>{{exam.id}}</td>
                        <td>{{exam.name}}</td>
                        <td id="invitation{{$index}}">{{exam.invitationUrl}}</td>
                        <td>
                            <div class="btn-group">
                                <a title="View Results" ng-click="vm.isResultsBtn=true; vm.viewExamResults(exam)" class="btn btn-sm btn-default">
                                    <i class="fa fa-bar-chart"></i>
                                </a>
                            </div>
                            <div class="btn-group">
                                <button title="Copy Invite" class="btn btn-sm btn-default" type="button" ngclipboard-success="vm.onCopySuccess(e)" ngclipboard ngclipboard-success="vm.onCopySuccess(e)" data-clipboard-target="#invitation{{$index}}" ng-click="vm.stopRedirection($event)">
                                    <i class="fa fa-copy"></i>
                                </button>
                            </div>
                            <div class="btn-group">
                                <a title="Delete" ng-click="vm.stopRedirection($event); vm.openDeleteExamModal(exam)" class="btn btn-sm btn-default">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>